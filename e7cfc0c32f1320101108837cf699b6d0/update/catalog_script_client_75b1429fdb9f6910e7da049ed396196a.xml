        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading || newValue == '') {
        return;
    }

    if (newValue) {
        var ga = new GlideAjax('x_sakon_mobile.sakon_order_guide');
        ga.addParam('sysparm_name', 'getcatimage');
        ga.addParam('sysparm_cat_id', newValue);
        ga.getXML(deviceresponse);
    }

    function deviceresponse(serverResponse) {
        var respose = serverResponse.responseXML.documentElement.getAttribute("answer");
       if (respose == 'NA') {
            g_form.setDisplay('image', false);
        } else {
            g_form.setDisplay('image', true);
            itamUpdateImage(respose + ".iix");
        }
    }

}]]></script>
